<h3 class="text-4xl my-3 font-extrabold text-center">All Sessions</h3>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Trip</th>
      <th>Date</th>
      <th>Buy in</th>
      <th>Cash out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.user.first_name %> <%= game.user.last_name %></td>
        <td><% if game.trip_id? %> <%= game.trip.name %> <% end %></td>
        <td><%= game.date %></td>
        <td>$<%= game.buy_in %></td>
        <td>$<%= game.cash_out %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Session', new_game_path, class: 'btn btn-primary' %>
