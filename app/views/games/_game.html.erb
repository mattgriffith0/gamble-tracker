<%= link_to game_path(game) do %>
  <div class="mx-auto mb-2 border-2 rounded-md border-gray-300 hover:shadow-md flex flex-row">
    <div class="w-1/2 lg:w-1/3 flex flex-row border">
      <div class="h-full">
        <%= image_tag game.casino.image || "https://crossedlink.com/uploads/images/profile_images/default_company.jpg", width: "100" %>
      </div>
      <div class="w-auto mx-auto pl-3 pt-2 flex flex-row items-center">
        <%= image_tag game.user.image || "https://p.kindpng.com/picc/s/451-4517876_default-profile-hd-png-download.png", class: 'w-16 h-16 mr-2 md:w-10 md:h-10 rounded-full border' %>
        <%= game.user.first_name %> <%= game.user.last_name %>
      </div>
    </div>
    <div class="w-1/2 lg:w-1/3 flex flex-col text-lg font-semibold">
      <p><%= game.casino.name %></p>
      <p class="text-sm italic font-light"><%= game.date.to_formatted_s(:long) %></p>
    </div>
  </div>
<% end %>