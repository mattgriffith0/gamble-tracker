<%= form_with(model: @casino, local: true, data: { controller: "places", action: "google-maps-callback@window->places#initMap" }) do |form| %>
  <% if @casino.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@casino.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
        <% @casino.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col md:flex-row">
    <div class="flex flex-col mx-auto md:p-2 w-full md:w-1/2">
      <div class="flex-col flex">
        <%= form.label :name, class: 'form-label' %>
        <%= form.search_field :name, class: 'form-input', data: { target: "places.field" } %>
      </div>

      <div class="flex flex-col">
        <%= form.label :address, class: 'form-label' %>
        <%= form.text_field :address, class: 'form-input' %>
      </div>

      <div class="flex flex-col">
        <%= form.label :latitude, class: 'form-label' %>
        <%= form.text_field :latitude, class: 'form-input', data: { target: "places.latitude" } %>
      </div>

      <div class="flex flex-col">
        <%= form.label :longitude, class: 'form-label' %>
        <%= form.text_field :longitude, class: 'form-input', data: { target: "places.longitude" } %>
      </div>

      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="p-2 w-full md:w-1/2 h-96 md:h-auto">
      <div data-target="places.map" class="h-96 w-96 md:h-full md:w-3/4 md:mx-auto"></div>
    </div>
  </div>


<% end %>
